{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "lib",
    "noEmitOnError": false,
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "noImplicitReturns": false,
    "strict": true,
    "strictFunctionTypes": false,
    "lib": [
      "esnext",
      "ES2015",
      "ES7",
      "ES6",
      "ES5",
      "DOM"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
